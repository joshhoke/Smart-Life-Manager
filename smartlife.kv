<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 30
        spacing: 20

        Label:
            text: "Smart Life Manager"
            font_size: 32

        TextInput:
            id: username_input
            hint_text: "Enter your name"
            multiline: False
            font_size: 20

        Button:
            text: "Login"
            font_size: 20
            on_press: root.login()

<DashboardScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 30
        spacing: 20

        Label:
            id: user_label
            font_size: 28

        Label:
            id: status_label
            font_size: 20

        Button:
            text: "üìã Manage Tasks"
            font_size: 20
            on_press: root.go_to_tasks()

        Button:
            text: "üí∞ Budget Manager"
            font_size: 20
            on_press: root.go_to_budget()

        Button:
            text: "üé≠ Mood Tracker"
            font_size: 20
            on_press: root.go_to_mood()

        Button:
            text: "Logout"
            font_size: 18
            on_press:
                app.root.current = "login"
<TaskManagerScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "üìù Task Manager"
            font_size: 28
            size_hint_y: None
            height: 50

        BoxLayout:
            size_hint_y: None
            height: 40
            spacing: 10

            TextInput:
                id: task_input
                hint_text: "Enter a new task"
                multiline: False

            Button:
                text: "Add"
                on_press: root.add_task()

        ScrollView:
            BoxLayout:
                id: task_box
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 5
                padding: 5

        Button:
            text: "üîô Back"
            size_hint_y: None
            height: 50
            on_press:
                app.root.current = "dashboard"
<BudgetManagerScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "üí∞ Budget Manager"
            font_size: 28
            size_hint_y: None
            height: 50

        BoxLayout:
            size_hint_y: None
            height: 40
            spacing: 10

            TextInput:
                id: budget_input
                hint_text: "Set daily budget ($)"
                input_filter: 'float'

            Button:
                text: "Set"
                on_press: root.set_budget()

        BoxLayout:
            size_hint_y: None
            height: 40
            spacing: 10

            TextInput:
                id: expense_name
                hint_text: "Expense name"
            TextInput:
                id: expense_amount
                hint_text: "Amount"
                input_filter: 'float'

            Button:
                text: "Add"
                on_press: root.add_expense()

        ScrollView:
            BoxLayout:
                id: expense_box
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 5
                padding: 5
	Button:
	    text: "üìä Show Expense Graph"
	    size_hint_y: None
	    height: 50
	    on_press: root.show_expense_graph()

        Button:
            text: "üîô Back"
            size_hint_y: None
            height: 50
            on_press:
                app.root.current = "dashboard"
<MoodTrackerScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "üé≠ Mood Tracker"
            font_size: 28
            size_hint_y: None
            height: 50

        BoxLayout:
            size_hint_y: None
            height: 40
            spacing: 10

            Label:
                text: "How do you feel today (1-5)?"
                font_size: 18
            TextInput:
                id: mood_input
                hint_text: "1‚Äì5"
                input_filter: 'int'
                multiline: False

            Button:
                text: "Log"
                on_press: root.log_mood()

        ScrollView:
            BoxLayout:
                id: mood_box
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
                padding: 10
	Button:
	    text: "üìà Show Mood Graph"
	    size_hint_y: None
	    height: 50
	    on_press: root.show_mood_graph()

        Button:
            text: "üîô Back"
            size_hint_y: None
            height: 50
            on_press:
                app.root.current = "dashboard"

